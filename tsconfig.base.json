{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Node",
      "lib": ["ES2022"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitOverride": true,
      "outDir": "dist",                       
      "rootDir": "src",      
      "types": ["node"]
    }
  }
  